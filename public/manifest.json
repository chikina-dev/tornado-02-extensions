{
  "manifest_version": 3,
  "name": "Viofolio",
  "version": "0.1.0",
  "description": "Collects search logs and sends them to a server.",
  "icons": {
    "16": "viofolio.png",
    "48": "viofolio.png",
    "128": "viofolio.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "history"
  ],
  "host_permissions": [
    "https://tornado2025.chigayuki.com/*"
  ],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "viofolio.png",
      "32": "viofolio.png"
    }
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "assets/content.js"
      ]
    }
  ]
}
